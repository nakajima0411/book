<div class="container">
  <div class="row">

    <%= render 'books/list' %>

    <div class="col-xs-9">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
         <tr>
           <th>image</th>
           <th>name</th>
           <th></th>
         </tr>
        </thead>

       <% @users.each do |user| %>
          <tbody>
           <tr>
            <td><%= attachment_image_tag user, :profile_image, size: '30x30', format: 'jpeg', class: "", fallback: "no_image.png", alt: "No image" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "show", user_path(user) %></td>
           </tr>
          </tbody>
       <% end %>
      </table>
    </div>
  </div>
</div>