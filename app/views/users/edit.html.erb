<div class="container">

    <h2>User info</h2>

    <%= form_for(@user) do |f| %>

      <% if @user.errors.any? %>
              <div id="error_explanation" class="alert alert-danger">
              <h2 class="error-text"><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
              </div>
      <% end %>

      <div class="field">
        <label for="user_name">Name</label>
        <%= f.text_field :name, id:"user_name", placeholder:"名前" %>
      </div>

      <div class="field">
        <label for="uesr_image">Image</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>

      <div class="field">
        <label for="user_introduction">Introduction</label>
        <%= f.text_area :introduction, id:"user_introduction", placeholder:"自己紹介"%>
      </div>

       <div class="actions"><%= f.submit ' Update User ' %></div>
    <% end %>
</div>