<div class="container">
  <div class="row">
   <div class="col-md-6 col-md-offset-3">

    <h1>Editing book</h1>

    <%= form_for(@book) do |f| %>

     <% if @book.errors.any? %>
              <div id="error_explanation" class="alert alert-danger">
              <h2 class="error-text"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
              </div>
      <% end %>

      <div class="field row">
        <%= f.label :title,  class: "label_title" %><br>
        <%= f.text_field :title, class: "book_title col-xs-12" %>
      </div>

      <div class="field row">
        <%= f.label :option, class: "label_body" %><br>
        <%= f.text_area :body, class: "book_body col-xs-12" %>
      </div>

       <p class="action row"><%= f.submit ' update Book ', class: "btn btn-color col-xs-12" %></p>
    <% end %>

	  <p>
	  	<%= link_to "Show", book_path(@book),
	     class: "show_#{@book.id}" %>
	     |
	  <%= link_to "Back", books_path,
	   class: "back" %>
	  </p>
   </div>
  </div>
</div>