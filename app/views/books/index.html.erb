<div class="index">

  <h1 class="index-title">Books</h1>
  <table class="table">
    <tr class="tr">
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>

    <% @books.each do |book| %>

      <tr class="tr">
	    <td><%= book.title %></td>

	    <td><%= book.body %></td>

        <td><%= link_to "Show", book_path(book.id),
         class: "show_#{book.id}" %></td>

        <td><%= link_to "Edit", edit_book_path(book.id),
         class: "edit_#{book.id}" %></td>

	    <td><%= link_to "Destroy", book_path(book.id),
	     method: :delete,  data: { confirm: 'Are you sureï¼Ÿ' },
	      class: "destroy_#{book.id}" %>
	    </td>
      </tr>
    <% end %>
  </table>

  <h2 class="new-title">New book</h2>

  <div class="new">
    <%= form_for @book do |f| %>
      <% if @book.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
        <h2 class="error-text"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :title, class: "label_title" %><br>
        <%= f.text_field :title, class: "book_title" %>
      </div>

      <div class="field">
        <%= f.label :body, class: "label_body" %><br>
        <%= f.text_area :body, class: "book_body" %>
      </div>

      <div class="actions">
        <%= f.submit ' Create Book ' %>
      </div>
    <% end %>
  </div>
</div>